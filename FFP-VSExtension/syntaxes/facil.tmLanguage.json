{
    "scopeName": "source.facil",
    "patterns": [
        {
            "name": "keyword.facil",
            "match": "\\b(READ|SET|IN|WRITE|FOR|ENDFOR|SPLIT|THEN|BY|TO|IF|ENDIF|FROM|DO|MATCHES|PRINT|TRIM|UPPERCASE|LOWERCASE|SUBSTRING|SORT|LENGTH|EQUALS)\\b"
        },
        {
            "name": "string.facil",
            "begin": "\"",
            "end": "\""
        },
        {
            "name": "comment.facil",
            "begin": "#"
        },
        {
            "name": "number.facil",
            "match": "\\b-?[0-9]+"
        },
        {
            "name": "variable.facil",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
            "name": "operator.facil",
            "match": "\\+|\\-|\\*|\\/|\\^|\\(|\\)|\\[|\\]"
        },
        {
            "name": "regex.facil",
            "begin": "/",
            "end": "/",
            "patterns": [
                {
                    "name": "escape.facil",
                    "match": "\\\\."
                }
            ]
        }
    ],
    "repository": {}
}
